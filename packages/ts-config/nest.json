{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "NestJS",
    "extends": "./node.json",
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "module": "NodeNext",
        "noEmit": false
    }
}
